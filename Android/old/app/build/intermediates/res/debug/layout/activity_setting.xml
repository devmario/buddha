<?xml version="1.0" encoding="utf-8"?>

<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android" style="@style/match_parent" android:orientation="vertical" android:gravity="left" android:background="@drawable/setting_bg">
    <exight.customviews.EffectButton style="@style/wrap_content" android:background="@drawable/setting_x" android:layout_margin="10dp" android:id="@+id/setting_btnClose" android:gravity="left"/>



    <LinearLayout
        android:layout_width="fill_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_height="fill_parent">
        <LinearLayout
            android:layout_width="fill_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_height="fill_parent">
            <LinearLayout style="@style/wrap_content" android:orientation="vertical" android:layout_centerVertical="true">
                <LinearLayout style="@style/wrap_content" android:background="@drawable/setting_table_top" android:gravity="center_vertical" android:paddingLeft="10dp"
                    android:paddingRight="10dp">
                    <TextView style="@style/setting_title_text" android:text="절하기 속도"/>
                    <exight.customviews.EffectButton style="@style/setting_common_blank_button" android:text="빠르게" android:id="@+id/setting_btnFrameSpaceSpeedUp"/>
                    <TextView android:layout_width="60dp" android:layout_height="28dp" android:textSize="19sp" android:textColor="#000000"
                        android:layout_marginLeft="-2dp"
                        android:layout_marginRight="-2dp"
                        android:text="5" android:gravity="center" android:background="#22000000" android:id="@+id/setting_tvFrameSpaceSpeed"/>
                    <exight.customviews.EffectButton style="@style/setting_common_blank_button" android:text="느리게" android:id="@+id/setting_btnFrameSpaceSpeedDown"/>
                </LinearLayout>
                <!-- 목소리 -->
                <LinearLayout style="@style/wrap_content" android:background="@drawable/setting_table_body" android:gravity="center_vertical" android:paddingLeft="10dp"
                    android:paddingRight="10dp">
                    <TextView style="@style/setting_title_text" android:text="목소리"/>

                    <LinearLayout style="@style/match_width" android:gravity="center" android:layout_width="270dp">
                        <exight.customviews.EffectButton style="@style/wrap_content" android:background="@drawable/setting_button_voice_man"  android:layout_marginRight="62dp"
                            android:id="@+id/setting_btnVoice_a"/>
                        <exight.customviews.EffectButton style="@style/wrap_content" android:background="@drawable/setting_button_voice_woman"  android:layout_marginRight="62dp"
                            android:id="@+id/setting_btnVoice_b"/>
                        <exight.customviews.EffectButton style="@style/wrap_content" android:background="@drawable/setting_button_voice_woman2"
                            android:id="@+id/setting_btnVoice_g"/>
                    </LinearLayout>


                </LinearLayout>

                <!-- 목소리 크기 -->
                <LinearLayout style="@style/wrap_content" android:background="@drawable/setting_table_body" android:gravity="center_vertical" android:paddingLeft="10dp"
                    android:paddingRight="10dp">
                    <TextView style="@style/setting_title_text" android:text="목소리 크기"/>

                    <exight.customviews.EffectButton style="@style/setting_common_blank_button" android:text="작게" android:id="@+id/setting_btnVoiceVolumeUp"/>
                    <TextView android:layout_width="60dp" android:layout_height="28dp" android:textSize="19sp" android:textColor="#000000"
                        android:layout_marginLeft="-2dp" android:id="@+id/setting_tvVoiceVolume"
                        android:layout_marginRight="-2dp"
                        android:text="5" android:gravity="center" android:background="#22000000"/>
                    <exight.customviews.EffectButton style="@style/setting_common_blank_button" android:text="크게" android:id="@+id/setting_btnVoiceVolumeDown"/>
                </LinearLayout>

                <!-- 배경음 -->
                <LinearLayout style="@style/wrap_content" android:background="@drawable/setting_table_body" android:gravity="center_vertical" android:paddingLeft="10dp"
                    android:paddingRight="10dp">
                    <TextView style="@style/setting_title_text" android:text="배경음"/>

                    <LinearLayout style="@style/match_width" android:gravity="center" android:layout_width="270dp">
                        <exight.customviews.EffectButton style="@style/wrap_content" android:background="@drawable/setting_button_bgm_bird"  android:layout_marginRight="28dp"
                            android:id="@+id/setting_btnBgmBird"/>
                        <exight.customviews.EffectButton style="@style/wrap_content" android:background="@drawable/setting_button_bgm_bug"  android:layout_marginRight="28dp"
                            android:id="@+id/setting_btnBgmBug"/>
                        <exight.customviews.EffectButton style="@style/wrap_content" android:background="@drawable/setting_button_bgm_water"  android:layout_marginRight="28dp"
                            android:id="@+id/setting_btnBgmWater"/>
                        <exight.customviews.EffectButton style="@style/wrap_content" android:background="@drawable/setting_button_bgm_music"
                            android:id="@+id/setting_btnBgmMusic"/>
                    </LinearLayout>
                </LinearLayout>

                <!-- 배경음 크기 -->
                <LinearLayout style="@style/wrap_content" android:background="@drawable/setting_table_body" android:gravity="center_vertical" android:paddingLeft="10dp"
                    android:paddingRight="10dp">
                    <TextView style="@style/setting_title_text" android:text="배경음 크기" />
                    <exight.customviews.EffectButton style="@style/setting_common_blank_button" android:text="작게" android:id="@+id/setting_btnBgmVolumeUp"/>
                    <TextView android:layout_width="60dp" android:layout_height="28dp" android:textSize="19sp" android:textColor="#000000"
                        android:id="@+id/setting_tvBgmVolumne"
                        android:layout_marginLeft="-2dp"
                        android:layout_marginRight="-2dp"
                        android:text="5" android:gravity="center" android:background="#22000000"/>
                    <exight.customviews.EffectButton style="@style/setting_common_blank_button" android:text="크게" android:id="@+id/setting_btnBgmVolumeDown"/>
                </LinearLayout>

                <!-- 절 기록 지우기 -->
                <LinearLayout style="@style/wrap_content" android:background="@drawable/setting_table_bottom" android:gravity="center_vertical" android:paddingLeft="10dp"
                    android:paddingRight="10dp">
                    <TextView style="@style/setting_title_text" android:layout_width="150dp" android:text="절한 기록 지우기" />
                    <LinearLayout style="@style/match_width" android:gravity="center" android:layout_width="190dp">
                        <exight.customviews.EffectButton style="@style/setting_common_blank_button" android:background="@drawable/setting_redbutton" android:text="지우기" android:id="@+id/setting_btnRemoveHistory"/>
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>



</LinearLayout><!-- From: file:/Users/jangwonhee/Documents/Buddha_2/Android/old/app/src/main/res/layout/activity_setting.xml -->