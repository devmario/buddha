<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">


    <LinearLayout style="@style/match_parent" android:orientation="vertical" android:gravity="center">
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_weight="0.15"
            android:layout_height="0dp">
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_weight="0.7"
            android:layout_height="0dp">

            <LinearLayout style="@style/match_parent" android:orientation="horizontal" android:gravity="center">
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="0.15"
                    android:layout_height="fill_parent">
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="0.7"
                    android:layout_height="fill_parent">
                    <TextView
                        android:id="@+id/tabItemMirror_text"
                        style="@style/match_parent"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:gravity="center"
                        android:maxWidth="230dp"
                        android:text="마음을 차분하게 가라앉히고sdfsdf"
                        android:textColor="#000000"
                        android:padding="20dp"
                        android:textSize="16sp"
                        />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="0.15"
                    android:layout_height="fill_parent">
                </RelativeLayout>
            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_weight="0.15"
            android:layout_height="0dp">
        </RelativeLayout>
    </LinearLayout>
