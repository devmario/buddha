<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pause_bg"
    android:orientation="horizontal" android:gravity="center">

    <LinearLayout
        
        style="@style/wrap_content"
        android:orientation="horizontal" android:background="@drawable/pause_button_bg" android:gravity="center">

        <exight.customviews.EffectButton
            android:id="@+id/pause_btnExit"
            style="@style/wrap_content"
            android:background="@drawable/pause_btn_exit"
            />

        <exight.customviews.EffectButton
            android:layout_marginLeft="5dp"
            android:id="@+id/pause_btnReplay"
            style="@style/wrap_content"
            android:background="@drawable/pause_btn_continue"
            
             />
    </LinearLayout>

</LinearLayout>