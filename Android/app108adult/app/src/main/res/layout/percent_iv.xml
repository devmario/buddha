<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android" style="@style/match_parent" android:orientation="vertical" android:gravity="center">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_weight="0.15"
        android:layout_height="0dp">
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_weight="0.7"
        android:layout_height="0dp">

        <LinearLayout style="@style/match_parent" android:orientation="horizontal" android:gravity="center">
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="0.15"
                android:layout_height="fill_parent">
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="0.7"
                android:layout_height="fill_parent">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:scaleType="fitCenter" android:id="@+id/innerIV"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="0.15"
                android:layout_height="fill_parent">
            </RelativeLayout>
        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_weight="0.15"
        android:layout_height="0dp">
    </RelativeLayout>
</LinearLayout>